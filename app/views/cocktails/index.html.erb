<%= render './components/banner' %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4">
      <% @cocktails.each do |cocktail| %>
      <div class="card">
        <%= cocktail.name %>
        <%= link_to "More info!", cocktail_path(cocktail) %>
        <%= link_to "Add ingredient", new_cocktail_dose_path(cocktail) %>
        <%= link_to "Delete", cocktail_path(cocktail), method: :delete %>
      </div>
      <% end %>
    </div>
  </div>
</div>

